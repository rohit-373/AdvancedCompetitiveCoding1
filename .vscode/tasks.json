{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "windows": {
                "command": "javac ${relativeFile} && java -classpath ${relativeFileDirname} ${fileBasenameNoExtension} && del ${relativeFileDirname}\\${fileBasenameNoExtension}.class"
            },
            "linux": {
                "command": "javac ${relativeFile} && java -classpath ${relativeFileDirname} ${fileBasenameNoExtension} && rm ${relativeFileDirname}/${fileBasenameNoExtension}.class"
            },
            "osx": {
                "command": "javac ${relativeFile} && java -classpath ${relativeFileDirname} ${fileBasenameNoExtension} && rm ${relativeFileDirname}/${fileBasenameNoExtension}.class"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "windows": {
                "command": "cd ${fileDirname} && javac ${fileBasename} && java ${fileBasenameNoExtension} && del ${fileBasenameNoExtension}.class && cd .."
            },
            "linux": {
                "command": "javac ${file} && java -classpath ${fileDirname} ${fileBasenameNoExtension} && rm ${fileDirname}/${fileBasenameNoExtension}.class"
            },
            "osx": {
                "command": "javac ${file} && java -classpath ${fileDirname} ${fileBasenameNoExtension} && rm ${fileDirname}/${fileBasenameNoExtension}.class"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}